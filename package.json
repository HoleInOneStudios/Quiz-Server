{
  "name": "@holeinonestudios/quiz-app",
  "version": "2.0.1",
  "description": "",
  "bin": "./src/bin/www",
  "main": "./src/bin/www",
  "directories": {
    "doc": "docs"
  },
  "scripts": {
    "test": "jest --colors",
    "start": "node ./src/bin/www",
    "dev": " nodemon ./src/bin/www",
    "build": "pkg package.json && @powershell copy src/data/data.xlsx dist/data/data.xlsx && npm run package",
    "package": "npm run package:win && npm run package:macos && npm run package:linux",
    "package:win": "@powershell Compress-Archive -Path dist/quiz-app-win.exe, dist/data/*-DestinationPath, dist/.env -DestinationPath dist/release/quiz-app-win.zip -Update",
    "package:linux": "@powershell Compress-Archive -Path dist/quiz-app-linux, dist/data/*-DestinationPath, dist/.env -DestinationPath dist/release/quiz-app-linux.zip -Update",
    "package:macos": "@powershell Compress-Archive -Path dist/quiz-app-macos, dist/data/*-DestinationPath, dist/.env -DestinationPath dist/release/quiz-app-macos.zip -Update"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/HoleInOneStudios/Quiz-Server.git"
  },
  "keywords": [],
  "author": "HoleInOneGolfer",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/HoleInOneStudios/Quiz-Server/issues"
  },
  "homepage": "https://github.com/HoleInOneStudios/Quiz-Server#readme",
  "devDependencies": {
    "@types/jest": "^29.0.0",
    "jest": "^29.0.1",
    "nodemon": "^2.0.19",
    "supertest": "^6.2.4",
    "pkg": "^5.3.1"
  },
  "dependencies": {
    "dotenv": "^16.0.3",
    "ejs": "^3.1.8",
    "express": "^4.18.1",
    "xlsx": "^0.18.5"
  },
  "pkg": {
    "outputPath": "dist",
    "targets": [
      "node16-win-x64",
      "node16-macos-x64",
      "node16-linux-x64"
    ],
    "assets": [
      "src/routes/**/*",
      "src/public/**/*",
      "src/views/**/*",
      "src/bin/**/*"
    ]
  }
}